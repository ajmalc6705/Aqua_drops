<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_invoice_document_inherited_aqua_drops"
        inherit_id="account.report_invoice_document">
        <xpath expr="//tbody/t//t[@name='account_invoice_line_accountable']/td[hasclass('o_price_total')]" position="replace">
            <td class="text-right o_price_total">
                <span class="text-nowrap" t-esc="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                <span class="text-nowrap" t-esc="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
            </td>
        </xpath>

    </template>
</odoo>
